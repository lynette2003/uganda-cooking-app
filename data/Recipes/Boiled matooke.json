  "steps": [
    {
      "step_number": 1,
      "instruction": "Peel and wash the matooke and set aside.",
      "action": "peeling",
      "ingredients": ["ing_matooke_green"]
    },
    {
      "step_number": 2,
      "instruction": "Slice the onions, chop the tomatoes, crush garlic, and set aside.",
      "action": "chopping",
      "ingredients": ["ing_onion", "ing_tomato", "ing_garlic"],
      "utensils": ["utn_knife"]
    },
    {
      "step_number": 3,
      "instruction": "Place the matooke in a saucepan, add water halfway, and bring to a boil.",
      "action": "boiling",
      "ingredients": ["ing_matooke_green", "ing_water"],
      "utensils": ["utn_saucepan", "utn_charcoal_stove"],
      "media_refs": ["matooke_boiled_step3_boiling.jpg", "matooke_boiled_full_process.mp4"]
    },
    {
      "step_number": 4,
      "instruction": "As soon as the matooke begins to boil, add the onions, tomatoes, and garlic. Reduce the heat and simmer until tender.",
      "action": "simmering",
      "time_min": 15,
      "media_refs": ["matooke_boiled_step4_simmering.jpg"]
    },
    {
      "step_number": 5,
      "instruction": "Just before the matooke is ready, add salt and pepper to taste.",
      "action": "seasoning",
      "ingredients": ["ing_salt", "ing_pepper"]
    },
    {
      "step_number": 6,
      "instruction": "When ready, serve hot. You may add cow ghee if desired.",
      "action": "serving",
      "ingredients": ["ing_ghee"],
      "serving_temperature": "hot",
      "media_refs": ["matooke_boiled_serving.jpg", "matooke_boiled_serving_clip.mp4"]
    }

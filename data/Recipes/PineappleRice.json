  "steps": [
    {
      "step_number": 1,
      "instruction": "Ensure your rice is cooked and completely cooled. Leftover rice from the previous day is ideal as it's drier and fries better without becoming mushy.",
      "action": "preparing_rice",
      "ingredients": ["ing_rice"]
    },
    {
      "step_number": 2,
      "instruction": "Prepare all vegetables and pineapple: chop the onion, mince the garlic, dice the bell pepper and carrot, and cut the pineapple into small chunks.",
      "action": "prepping_ingredients",
      "ingredients": ["ing_fresh_pineapple", "ing_onion", "ing_garlic", "ing_bell_pepper", "ing_carrot"],
      "utensils": ["utn_knife_cutting_board"]
    },
    {
      "step_number": 3,
      "instruction": "Heat the vegetable oil in a large wok or skillet over medium-high heat. Add the chopped onion and sauté until soft and translucent, about 3-4 minutes.",
      "action": "sautéing",
      "ingredients": ["ing_vegetable_oil", "ing_onion"],
      "utensils": ["utn_large_wok_skillet", "utn_wooden_spoon"]
    },
    {
      "step_number": 4,
      "instruction": "Add the minced garlic and sauté for another minute until fragrant.",
      "action": "sautéing",
      "ingredients": ["ing_garlic"]
    },
    {
      "step_number": 5,
      "instruction": "Add the diced bell pepper and carrot. Stir-fry for 3-4 minutes until the vegetables begin to soften.",
      "action": "cooking_vegetables",
      "ingredients": ["ing_bell_pepper", "ing_carrot"]
    },
    {
      "step_number": 6,
      "instruction": "Push the vegetables to one side of the wok. Add the curry powder and turmeric to the empty space and toast for 30 seconds, then mix everything together.",
      "action": "toasting_spices",
      "ingredients": ["ing_curry_powder", "ing_turmeric"]
    },
    {
      "step_number": 7,
      "instruction": "Add the green peas and pineapple chunks. Stir-fry for 2 minutes until the pineapple is heated through and releases some of its juice.",
      "action": "adding_fruit_veg",
      "ingredients": ["ing_green_peas", "ing_fresh_pineapple"]
    },
    {
      "step_number": 8,
      "instruction": "Increase the heat to high. Add the cooled rice to the wok. Pour the soy sauce over the rice and add the salt and black pepper. Use the spoon to break up any clumps of rice.",
      "action": "adding_rice",
      "ingredients": ["ing_rice", "ing_soy_sauce", "ing_salt", "ing_black_pepper"]
    },
    {
      "step_number": 9,
      "instruction": "Stir-fry everything together for 4-5 minutes, tossing constantly, until the rice is evenly colored with the spices and heated through.",
      "action": "stir_frying",
      "cooking_indicators": {
        "visual": "Rice is hot and grains are separate, vegetables are tender-crisp",
        "time": "4-5 minutes",
        "texture": "Fluffy and not mushy"
      }
    },
    {
      "step_number": 10,
      "instruction": "Taste and adjust seasoning if needed. Remove from heat.",
      "action": "seasoning"
    },
    {
      "step_number": 11,
      "instruction": "Garnish with chopped spring onions and fresh cilantro.",
      "action": "garnishing",
      "ingredients": ["ing_spring_onions", "ing_cilantro"]
    },
    {
      "step_number": 12,
      "instruction": "Serve the pineapple rice hot while fresh.",
      "action": "serving"
    }
  ],
  "cooking_method": "stir_frying",

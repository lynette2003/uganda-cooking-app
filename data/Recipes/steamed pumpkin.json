      "ingredients": ["ing_pumpkin_medium"],
      "utensils": ["utn_knife"]
    },
    {
      "step_number": 2,
      "instruction": "Wash the pumpkin pieces thoroughly.",
      "action": "washing",
      "ingredients": ["ing_pumpkin_medium"]
    },
    {
      "step_number": 3,
      "instruction": "Wrap the pumpkin pieces in banana leaves.",
      "action": "wrapping",
      "ingredients": ["ing_banana_leaves", "ing_pumpkin_medium"]
    },
    {
      "step_number": 4,
      "instruction": "Place banana fibres at the bottom of the saucepan, then add water. Arrange the wrapped pumpkin on top to avoid direct contact with water.",
      "action": "arranging",
      "ingredients": ["ing_banana_fibres", "ing_water"]
    },
    {
      "step_number": 5,
      "instruction": "Cover the saucepan tightly and steam for about 45 minutes until the pumpkin is tender.",

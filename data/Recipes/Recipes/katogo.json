  "steps": [
    {
      "step_number": 1,
      "instruction": "Put the matooke into a heavy saucepan and add water halfway. Bring to a boil. Do NOT add salt. Reduce heat and simmer gently for at least one hour (the longer the better).",
      "action": "boiling_simmering",
      "utensils": ["utn_heavy_saucepan"],
      "ingredients": ["ing_matooke_mature", "ing_water"],
      "time_min": 60,
      "important_note": "Do not add salt at this stage"
    },
    {
      "step_number": 2,
      "instruction": "Heat vegetable oil in a medium saucepan and fry the garlic and onions until fragrant.",
      "action": "frying",
      "utensils": ["utn_medium_saucepan"],
      "ingredients": ["ing_vegetable_oil", "ing_garlic", "ing_onion"]
    },
    {
      "step_number": 3,
      "instruction": "Add the rest of the vegetables including salt and pepper to the saucepan.",
      "action": "adding",
      "utensils": ["utn_medium_saucepan"],
      "ingredients": ["ing_carrot", "ing_amaranth", "ing_tomato_paste", "ing_garden_eggs", "ing_tomato", "ing_salt", "ing_pepper"]
    },
    {
      "step_number": 4,
      "instruction": "Add a bit of water and simmer gently over low heat for forty-five minutes. Correct the seasoning to taste.",
      "action": "simmering",
      "utensils": ["utn_medium_saucepan"],
      "ingredients": ["ing_water"],
      "time_min": 45
    },
    {
      "step_number": 5,
      "instruction": "When matooke is done, drain water but reserve some for potential use. Immediately add the vegetable mix to the matooke.",
      "action": "combining",
      "utensils": ["utn_heavy_saucepan"],
      "important_note": "Reserve some matooke water for adjusting consistency"
    },
    {
      "step_number": 6,
      "instruction": "Return saucepan to fire. Once it begins to boil, reduce heat immediately and cook for another half hour.",
      "action": "simmering",
      "utensils": ["utn_heavy_saucepan"],
      "time_min": 30
    },
    {
      "step_number": 7,
      "instruction": "Serve hot as a complete one-pot meal.",
      "action": "serving",
      "serving_temperature": "hot"
    }
  ],

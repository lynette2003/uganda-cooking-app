  "steps": [
    {
      "step_number": 1,
      "instruction": "Cook the macaroni according to package directions in a large pot of salted water until al dente (firm to the bite). Drain in a colander, rinse with cold water to stop the cooking, and set aside.",
      "action": "cooking_pasta",
      "ingredients": ["ing_macaroni_pasta"],
      "utensils": ["utn_large_pot", "utn_colander"]
    },
    {
      "step_number": 2,
      "instruction": "While the pasta cooks, prepare all vegetables: chop the onion, mince the garlic, dice the bell pepper, grate the carrot, and chop the spring onions.",
      "action": "prepping_vegetables"
    },
    {
      "step_number": 3,
      "instruction": "Heat the vegetable oil in a large wok or skillet over medium-high heat. Add the chopped onion and sauté until soft and translucent, about 3-4 minutes.",
      "action": "sautéing",
      "ingredients": ["ing_vegetable_oil", "ing_onion"],
      "utensils": ["utn_large_wok_skillet", "utn_wooden_spoon"]
    },
    {
      "step_number": 4,
      "instruction": "Add the minced garlic and optional curry powder. Sauté for 30 seconds until fragrant.",
      "action": "cooking_aromatics",
      "ingredients": ["ing_garlic", "ing_curry_powder"]
    },
    {
      "step_number": 5,
      "instruction": "Add the diced bell pepper, grated carrot, and green peas. Stir-fry for 3-4 minutes until the vegetables are tender-crisp.",
      "action": "cooking_vegetables",
      "ingredients": ["ing_bell_pepper", "ing_carrot", "ing_green_peas"]
    },
    {
      "step_number": 6,
      "instruction": "Add the cooked and drained macaroni to the wok. Pour the soy sauce and ketchup over the pasta. Season with salt and black pepper.",
      "action": "combining",
      "ingredients": ["ing_macaroni_pasta", "ing_soy_sauce", "ing_tomato_ketchup", "ing_salt", "ing_black_pepper"]
    },
    {
      "step_number": 7,
      "instruction": "Toss everything together and stir-fry for 4-5 minutes, until the pasta is heated through and evenly coated with the sauce.",
      "action": "stir_frying",
      "cooking_indicators": {
        "visual": "Pasta is hot and has taken on the color of the sauce.",
        "time": "4-5 minutes",
        "texture": "Pasta is tender, vegetables are crisp-tender."
      }
    },
    {
      "step_number": 8,
      "instruction": "Taste and adjust seasoning if needed.",
      "action": "seasoning"
    },
    {
      "step_number": 9,
      "instruction": "Remove from heat and stir in the chopped spring onions.",
      "action": "garnishing",
      "ingredients": ["ing_spring_onions"]
    },
    {
      "step_number": 10,
      "instruction": "Serve the fried macaroni hot immediately.",
      "action": "serving"
    }
  ],

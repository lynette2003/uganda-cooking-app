  "steps": [
    {
      "step_number": 1,
      "instruction": "Rinse the black bean sprouts thoroughly in a colander and drain them well. Excess water will make the stir-fry soggy.",
      "action": "preparing_sprouts",
      "ingredients": ["ing_black_bean_sprouts"],
      "utensils": ["utn_colander"]
    },
    {
      "step_number": 2,
      "instruction": "Prepare all vegetables: thinly slice the bell pepper, julienne the carrot, chop the spring onions (keeping white and green parts separate), mince the garlic, and grate the ginger.",
      "action": "prepping_vegetables"
    },
    {
      "step_number": 3,
      "instruction": "Heat the vegetable oil in a wok or large skillet over high heat until very hot.",
      "action": "heating_wok",
      "ingredients": ["ing_vegetable_oil"],
      "utensils": ["utn_wok_large_skillet"]
    },
    {
      "step_number": 4,
      "instruction": "Add the white parts of the spring onions, minced garlic, and grated ginger. Stir-fry for 30 seconds until very fragrant.",
      "action": "saut√©ing_aromatics",
      "ingredients": ["ing_spring_onions", "ing_garlic", "ing_ginger"],
      "utensils": ["utn_wooden_spoon_spatula"]
    },
    {
      "step_number": 5,
      "instruction": "Add the sliced carrot and bell pepper. Stir-fry for 1-2 minutes until they just begin to soften but are still crisp.",
      "action": "cooking_vegetables",
      "ingredients": ["ing_carrot", "ing_red_bell_pepper"]
    },
    {
      "step_number": 6,
      "instruction": "Add the well-drained black bean sprouts to the wok. Toss everything together quickly.",
      "action": "adding_sprouts",
      "ingredients": ["ing_black_bean_sprouts"]
    },
    {
      "step_number": 7,
      "instruction": "Pour the soy sauce and sesame oil over the sprouts. Season with salt and black pepper. Toss vigorously for 1-2 minutes only, until the sprouts are heated through but still very crisp and crunchy.",
      "action": "stir_frying",
      "ingredients": ["ing_soy_sauce", "ing_sesame_oil", "ing_salt", "ing_black_pepper"],
      "cooking_indicators": {
        "visual": "Sprouts will be glossy and slightly wilted but still retain their shape and crunch.",
        "time": "1-2 minutes",
        "texture": "Crisp and crunchy."
      }
    },
    {
      "step_number": 8,
      "instruction": "Remove from heat immediately. Stir in the green parts of the spring onions.",
      "action": "finishing",
      "ingredients": ["ing_spring_onions"]
    },
    {
      "step_number": 9,
      "instruction": "Transfer to a serving plate and garnish with toasted sesame seeds.",
      "action": "garnishing",
      "ingredients": ["ing_sesame_seeds"]
    },
    {
      "step_number": 10,
      "instruction": "Serve immediately while hot and crisp.",
      "action": "serving"
    }
  ],

  "steps": [
    {
      "step_number": 1,
      "instruction": "Wash the green beans and trim off the ends. If they are very long, you can cut them in half.",
      "action": "preparing_beans",
      "ingredients": ["ing_fresh_green_beans"],
      "utensils": ["utn_knife_cutting_board"]
    },
    {
      "step_number": 2,
      "instruction": "Heat the vegetable oil in a large skillet or wok over medium-high heat. Add the chopped onion and sauté for 2-3 minutes until softened.",
      "action": "sautéing",
      "ingredients": ["ing_vegetable_oil", "ing_onion"],
      "utensils": ["utn_large_skillet", "utn_wooden_spoon"]
    },
    {
      "step_number": 3,
      "instruction": "Add the minced garlic and optional red chili flakes. Sauté for another 30 seconds until fragrant.",
      "action": "cooking_aromatics",
      "ingredients": ["ing_garlic", "ing_red_chili_flakes"]
    },
    {
      "step_number": 4,
      "instruction": "Add the green beans to the skillet. Pour in the water and season with salt and black pepper. Stir to combine.",
      "action": "adding_beans",
      "ingredients": ["ing_fresh_green_beans", "ing_water", "ing_salt", "ing_black_pepper"]
    },
    {
      "step_number": 5,
      "instruction": "Cover the skillet with a lid and let the beans steam for 4-6 minutes, stirring occasionally, until they are tender-crisp (bright green and still slightly firm to the bite).",
      "action": "steaming",
      "utensils": ["utn_lid"],
      "cooking_indicators": {
        "visual": "Beans turn bright green and are pierced easily with a fork but still offer some resistance.",
        "time": "4-6 minutes",
        "texture": "Tender-crisp, not mushy."
      }
    },
    {
      "step_number": 6,
      "instruction": "Remove the lid. If there is any remaining water, let it cook off for a minute. The beans should be dry.",
      "action": "finishing_cooking"
    },
    {
      "step_number": 7,
      "instruction": "Turn off the heat. Add the coarsely chopped roasted peanuts to the skillet and toss everything together until the peanuts are evenly distributed.",
      "action": "adding_peanuts",
      "ingredients": ["ing_roasted_peanuts"]
    },
    {
      "step_number": 8,
      "instruction": "Taste and adjust seasoning if necessary.",
      "action": "seasoning"
    },
    {
      "step_number": 9,
      "instruction": "Transfer to a serving dish and serve immediately.",
      "action": "serving"
    }
  ],
